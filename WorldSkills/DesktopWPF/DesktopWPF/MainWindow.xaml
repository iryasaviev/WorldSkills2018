<Page x:Class="DesktopWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopWPF"
        mc:Ignorable="d"
        Title="Главная" Height="450" Width="800">
	<Grid>

		<!--Body-->
		<StackPanel Orientation="Vertical"
					Margin="0,65,0,0">

			<!--Form-->
			<StackPanel Orientation="Vertical"
						MaxWidth="300px"
						Margin="0,50">

				<StackPanel Orientation="Vertical"
							Margin="0, 10">
					<Button Name="SignUpBtn"
							Height="32px"
							Padding="12, 0"
							Margin="0, 20"
							BorderBrush="#e0a9af"
							Background="#e0a9af"
							Foreground="#fff"
							FontSize="14" Click="SignUpBtn_Click">Регистрация</Button>
					<Button Name="SignInBtn"
							Height="32px"
							Padding="12, 0"
							Margin="0, 20"
							BorderBrush="#b5d5ca"
							Background="#b5d5ca"
							Foreground="#fff"
							FontSize="14" Click="SignInBtn_Click">Вход</Button>
				</StackPanel>
			</StackPanel>

		</StackPanel>

	</Grid>
</Page>
