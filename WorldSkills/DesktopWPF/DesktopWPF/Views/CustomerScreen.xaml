<Page x:Class="DesktopWPF.Views.CustomerScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Экран заказчика">

	<Grid>

		<!--Header-->
		<StackPanel Orientation="Vertical"
					VerticalAlignment="Top"
					Background="#b5d5ca">
			<TextBlock VerticalAlignment="Center"
					   HorizontalAlignment="Center"
					   Padding="0,15"
					   Foreground="#fff"
					   FontSize="18"
					   TextAlignment="Center">Экран заказчика</TextBlock>
			
			<Menu VerticalAlignment="Top"
				  Height="19"
				  Background="#fff"
				  BorderBrush="#FFD1EEFC"
				  BorderThickness="0,0,0,1">
				<MenuItem Name="MenuExitBtn"
						  Header="Выход"
						  Foreground="#000"
						  Click="MenuExitBtn_Click"></MenuItem>
			</Menu>
		</StackPanel>

		<!--Body-->
		<StackPanel Orientation="Vertical"
					Margin="0,65,0,0">

		</StackPanel>

	</Grid>
</Page>
